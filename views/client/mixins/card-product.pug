mixin cardProduct(product)
  .col-md-3.col-sm-6.mb-3  
    .card(style="width: 100%; height: 100%;")
      img(src=product.thumbnail, class="card-img-top", alt=product.title)
      .card-body.d-flex.flex-column  
        h5.card-title= product.title
        p.card-text= product.description
        if product.discountPercentage
          p.card-text.text-muted
            span(style="text-decoration: line-through;")= "$" + product.price
            span= " - " + product.discountPercentage.toFixed(2) + "% off"
        p.card-price
          span= "$" + (product.price * (1 - product.discountPercentage / 100)).toFixed(2)
      .card-footer.text-muted
        small.stock-info
          span In stock: #{product.stock} items